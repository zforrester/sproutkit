---
import Body from '../layouts/Body.astro'
import Nav from '../components/Nav.astro'

export interface Props {
  title: string
}

const { title, headings } = Astro.props

---

<Body title={title}>
  <a class="skip-to-content-anchor" href="#main-content">Skip to main content</a>

	<nav id="main-content">
    <Nav />
  </nav>
	<main>
    <slot />
    {headings.map((heading: any) => (
      <p>{heading.text}</p>
    )
    )}
  </main>
</Body>

<style lang='scss'>
html {
  display: flex;
  @include debug;
  min-height: 100%;
}

body {
  display: flex;
  flex-grow: 1;
  @include debug;
}

main {
  flex-grow: 1;
}

nav {
  flex-shrink: 0;
  min-width: 320px;
}

.skip-to-content-anchor {
  position: absolute;
  top: 0;
  left: 0;
  @include transition;
  transform: translate3d(0, -100%, 0);
}
</style>
