---
export interface Props {
  title?: string
}

const { title } = Astro.props.frontmatter || Astro.props
---

<!DOCTYPE html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <meta name='generator' content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global lang='scss'>
  @import url('https://fonts.googleapis.com/css2?family=Figtree:wght@100;200;300;400;500;600;700;800;900&family=Montserrat:wght@200;300;400;500;600;700;800&family=Montserrat+Alternates:wght@100;200;300;400;500;600;700;800;900&family=Urbanist:wght@200;300;400;500;600;700;800&family=Yeseva+One:wght@200;300;400;500;600;700;800&family=Poppins:wght@200;300;400;500;600;700;800&family=Quicksand:wght@200;300;400;500;600;700;800&display=swap');

  :root {
    // --font-family-primary: 'Poppins';
    --font-family-primary: 'Poppins';
    --font-family-secondary: 'Figtree';
  }
  * {
    box-sizing: border-box;
    appearance: none;
    margin: 0;
    padding: 0;
    outline: none;
  }
  html {
    display: flex;
    min-height: 100%;
    max-width: 100vw;
    scroll-behavior: smooth;
    line-height: line-height('small');
    background-color: color('cool-gray-100');
  }

  body {
    flex-grow: 1;
    max-width: 100vw;
    min-width: 0;
    min-height: 0;
    display: flex;
    flex-wrap: wrap;
    background-color: color('cool-gray-100');
  }
</style>
